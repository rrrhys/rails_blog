<!DOCTYPE html>
<html>
<head>
  <title>RailsBlog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= debug(current_user)%>
<%= signed_in?%>
<% flash.each do |k, v| %>
	<div class="alert alert-<%= k %>"><%= v%></div>
<% end %>
<%= yield %>
<footer>
	<%= debug(params) if Rails.env.development? %>
	<%= debug(cookies) if Rails.env.development? %>
</footer>
</body>
</html>
